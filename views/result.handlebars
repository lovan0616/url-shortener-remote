<h2 style="color: whitesmoke; width:max-content">成功縮短網址啦！</h2>
<img
  src="https://images.vexels.com/media/users/3/136294/isolated/preview/4172fc9833fe18b5f8669b148713a189-link-icon-by-vexels.png"
  width="30%">

<div class="row">
  <div class="col-12 align-self-center">
    <p id="copyText" style="width: 100%; color:whitesmoke">{{link.link}}</p>
  </div>
  <div class="col-12 align-self-center">
    <input type="button" class="btn btn-secondary" style="width: 100%;" onclick="copyLink()" title="Copy to Clipboard" value="Copy" readonly />
  </div>
</div>


<script>
  function copyLink() {
    const copyText = document.getElementById("copyText")

    let selection = window.getSelection(); //選取整個window領域

    let range = document.createRange(); 

    range.selectNodeContents(copyText); //將範圍設定在要複製的字串

    selection.removeAllRanges(); //清空選取的範圍

    selection.addRange(range); //將選取的範圍變成字串的範圍
 
    document.execCommand('copy'); //執行複製到剪貼板
  }
</script>